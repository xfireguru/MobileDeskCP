            	            'Do you want to quit', 
      	                  onConfirmQuit, 
	                        'QUIT TITLE', 
                  	      'OK,Cancel'  
            	        );
		            }, true); 


				    function onConfirmQuit(button){
				       if(button == "1"){
				        navigator.app.exitApp(); 
				    }
			    }
